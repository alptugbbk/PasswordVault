@model PasswordVaultUI.Models.ForgotPasswordViewModel
@{
	Layout = "_Layout";
}


<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Login</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link href="~/css/auth/authstyle.css" rel="stylesheet" />

</head>
<body>

	<div id="message-container" class="position-fixed top-0 end-0 p-4 mt-5" style="z-index: 1050;">
		<div id="success-message" class="alert alert-success d-none" role="alert">
		</div>
		<div id="error-message" class="alert alert-danger d-none" role="alert">
		</div>
	</div>

	<div class="auth-container">

		<form class="login-form" id="forgot-password-form">

			<div class="login-img-container">
				<img src="~/assets/ic_mail.png" />
			</div>

			<input asp-for="Email" type="text" class="form-control" id="email" placeholder="Email" required />

			<div class="authbtn-container">
				<button type="submit" class="auth-button btn mb-3 mt-3">Send Email</button>
			</div>

			<div class="text-primary-container">
				<a class="text-primary" onclick="window.location.href='/Auth/Login'">Sign in</a>
			</div>

		</form>

	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/common/submitajax.js"></script>
	<script src="~/js/auth/forgotpassword.js"></script>
</body>
</html>




