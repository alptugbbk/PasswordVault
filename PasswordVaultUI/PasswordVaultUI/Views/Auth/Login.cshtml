@model PasswordVaultUI.Models.LoginViewModel
@{
	Layout = "_Layout";
}


<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Login</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
	<link href="~/css/auth/authstyle.css" rel="stylesheet" />


</head>
<body>

	<div id="message-container" class="position-fixed top-0 end-0 p-4 mt-5" style="z-index: 1050;">
		<div id="success-message" class="alert alert-success d-none" role="alert">
		</div>
		<div id="error-message" class="alert alert-danger d-none" role="alert">
		</div>
	</div>

	<div class="auth-container">
		<form class="login-form" id="login-form">

			<div class="login-img-container">
				<img src="~/assets/ic_logo.png" />
			</div>

			<div class="input-container">
				<input asp-for="UserName" type="text" class="form-control" id="username" placeholder="Username" required />
			</div>

			<div class="input-container">
				<input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password" required />
				<i id="toggle-password" class="bi bi-eye-slash"></i>
			</div>

			<div class="mb-3">
				<label class="form-check-label">
					<input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberme" />Remember Me
				</label>
				<a class="text-primary ms-5" id="forgotpassword" onclick="window.location.href='/Auth/ForgotPassword'">Forgot Password?</a>
			</div>

			<div class="authbtn-container">
				<button type="submit" class="auth-button btn mb-3">Sign in</button>
			</div>


			<div class="text-primary-container">
				<label>Don't have an account</label>
				<a class="text-primary" onclick="window.location.href='/Auth/Register'">Sign up</a>
			</div>

		</form>


	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/auth/togglepassword.js"></script>
	<script src="~/js/common/submitajax.js"></script>
	<script src="~/js/auth/login.js"></script>
</body>
</html>