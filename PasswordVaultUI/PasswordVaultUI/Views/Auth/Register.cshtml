@model PasswordVaultUI.Models.RegisterViewModel
@{
	Layout = "_Layout";
}


<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Login</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
	<link href="~/css/auth/authstyle.css" rel="stylesheet" />

</head>
<body>

	<div id="message-container" class="position-fixed top-0 end-0 p-4 mt-5" style="z-index: 1050;">
		<div id="success-message" class="alert alert-success d-none" role="alert">
		</div>
		<div id="error-message" class="alert alert-danger d-none" role="alert">
		</div>
	</div>


	<div class="auth-container">
		<form method="post" class="login-form" id="register-form">

			<div class="register-img-container">
				<img src="~/assets/ic_logo.png" />
			</div>

			<input asp-for="FirstName" class="form-control" id="firstname" placeholder="Firstname" required autofocus />
			<input asp-for="LastName" class="form-control" id="lastname" placeholder="Lastname" required />
			<input asp-for="UserName" class="form-control" id="username" placeholder="Username" required />
			<input asp-for="Email" type="email" class="form-control" id="email" placeholder="Email" required />
			<div class="input-container">
				<input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password" required />
				<i id="toggle-password" class="bi bi-eye-slash"></i>
			</div>

			<div class="authbtn-container">
				<button type="submit" class="auth-button btn mb-3 mt-2">Sign up</button>
			</div>

			<div class="text-primary-container">
				<a class="text-primary" onclick="window.location.href='/Auth/Login'">Sign in</a>
			</div>

			@* <div class="message" id="message"></div> *@

		</form>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/authjs/togglepassword.js"></script>
	<script src="~/js/commonjs/submitajax.js"></script>
	<script src="~/js/authjs/register.js"></script>
</body>
</html>



