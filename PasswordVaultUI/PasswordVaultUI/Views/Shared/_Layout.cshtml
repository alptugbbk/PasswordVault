@{
    var userName = ViewData["UserName"] as string;
    var profilePicture = ViewData["ProfilePicturePath"] as string;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-shadow {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-shadow bg-white fixed-top px-lg-5">
        <a class="navbar-brand d-flex align-items-center" href="#">
            <img src="~/assets/ic_logo.png" alt="Logo" width="30" height="30" style="margin: 5px;"> Password Vault
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">

                @if (@userName != null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Platform/PIndex">Platform</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Auth/Login">Log in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Auth/Register">Sign up</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@Url.Content(profilePicture)" alt="null" class="rounded-circle" width="30" height="30"> @userName
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#profileModal">Profile</a></li>
                            <li><a class="dropdown-item" href="#" id="btnlogout">Log out</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Platform/PIndex">Platform</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Auth/Login">Log in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Auth/Register">Sign up</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
